<Window x:Class="PokeMMO_.DiscordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:model="clr-namespace:PokeMMO_.Model"
        xmlns:vm="clr-namespace:PokeMMO_.ViewModels"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        MouseDown="Window_MouseDown" x:Name="MyDiscordWindow" Title="" Height="190" Width="120"
        Background="Transparent" WindowStyle="None" AllowsTransparency="true" ResizeMode="NoResize"
        WindowStartupLocation="Manual" Topmost="true">
  <Grid>
    <Border BorderThickness="1" CornerRadius="8" Background="#FF252525"/>
    <Label Content="Discord DM's" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="2,0,0,0"/>
    <Label MouseLeftButtonDown="lbl_x_Click" x:Name="lbl_x" Content="X" HorizontalAlignment="Right"
           VerticalAlignment="Top" Margin="0,0,7,0"/>
    <Grid Margin="0px,24px,0px,0px">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="auto"/>
      </Grid.ColumnDefinitions>
      <Grid.RowDefinitions>
        <RowDefinition Height="auto"/>
        <RowDefinition Height="auto"/>
        <RowDefinition Height="auto"/>
        <RowDefinition Height="auto"/>
        <RowDefinition Height="auto"/>
        <RowDefinition Height="auto"/>
      </Grid.RowDefinitions>
      <TextBlock Margin="8,8,0,0" Grid.Row="0" Grid.Column="0" Foreground="White" Text="Shiny"
                 ToolTip="Receive Discord Direct Messages when encountering a Shiny Pokemon."/>
      <CheckBox Margin="8,8,0,0" Grid.Row="0" Grid.Column="1" IsChecked="true" IsEnabled="false"/>
      <TextBlock Margin="8,8,0,0" Grid.Row="1" Grid.Column="0" Foreground="White" Text="Captcha"
                 ToolTip="Receive Discord Direct Messages when getting a Captcha."/>
      <CheckBox Margin="8,8,0,0" Grid.Row="1" Grid.Column="1" IsChecked="true" IsEnabled="false"/>
      <TextBlock Margin="8,8,0,0" Grid.Row="2" Grid.Column="0" Foreground="White" Text="Thief"
                 ToolTip="Receive Discord Direct Messages when stealing a item with Thief."/>
      <CheckBox Checked="chk_DiscordDMThief_Changed" Unchecked="chk_DiscordDMThief_Changed"
                x:Name="chk_DiscordDMThief" Margin="8,8,0,0" Grid.Row="2" Grid.Column="1"
                IsChecked="{Binding DiscordDMThief}"/>
      <TextBlock Margin="8,8,0,0" Grid.Row="3" Grid.Column="0" Foreground="White" Text="PayDay"
                 ToolTip="Receive Discord Direct Messages when collecting coins with PayDay."/>
      <CheckBox Checked="chk_DiscordDMPayDay_Changed" Unchecked="chk_DiscordDMPayDay_Changed"
                x:Name="chk_DiscordDMPayDay" Margin="8,8,0,0" Grid.Row="3" Grid.Column="1"
                IsChecked="{Binding DiscordDMPayDay}"/>
      <TextBlock Margin="8,8,0,0" Grid.Row="4" Grid.Column="0" Foreground="White" Text="Throw Ball"
                 ToolTip="Receive Discord Direct Messages when throwing Pokeballs."/>
      <CheckBox Checked="chk_DiscordDMThrowBall_Changed" Unchecked="chk_DiscordDMThrowBall_Changed"
                x:Name="chk_DiscordDMThrowBall" Margin="8,8,0,0" Grid.Row="4" Grid.Column="1"
                IsChecked="{Binding DiscordDMThrowBall}"/>
      <TextBlock Margin="8,8,0,0" Grid.Row="5" Grid.Column="0" Foreground="White" Text="IV31"
                 ToolTip="Receive Discord Direct Messages when catching a IV31 Pokemon."/>
      <CheckBox Checked="chk_DiscordDMIV31_Changed" Unchecked="chk_DiscordDMIV31_Changed"
                x:Name="chk_DiscordDMIV31" Margin="8,8,0,0" Grid.Row="5" Grid.Column="1"
                IsChecked="{Binding DiscordDMIV31}"/>
    </Grid>
  </Grid>
</Window>