<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="PokeMMO_.Views.SecurityPage" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:model="clr-namespace:PokeMMO_.Model" xmlns:local="clr-namespace:PokeMMO_.Views" xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks" xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit">
  <Grid>
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="auto" />
        <RowDefinition Height="auto" />
        <RowDefinition Height="auto" />
        <RowDefinition Height="auto" />
        <RowDefinition Height="auto" />
        <RowDefinition Height="auto" />
        <RowDefinition Height="auto" />
        <RowDefinition Height="auto" />
        <RowDefinition Height="auto" />
        <RowDefinition Height="auto" />
        <RowDefinition Height="auto" />
        <RowDefinition Height="auto" />
        <RowDefinition Height="auto" />
      </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="*" />
      </Grid.ColumnDefinitions>
      <CheckBox Name="chk_stoppm" Margin="10,17,0,0" Grid.Row="0" Grid.Column="0" Content="Stop when PM" ToolTip="The bot will stop after you receive a PM in a PM window in order to avoid being banned." IsChecked="{Binding StopPM}" />
      <CheckBox Name="chk_alertpm" Margin="10,17,0,0" Grid.Row="0" Grid.Column="1" Content="Alert when PM" ToolTip="The bot will alert you after you receive a PM in a PM window in order to avoid being banned." IsChecked="{Binding AlertPM}" />
      <CheckBox Name="chk_stopwalkcycle" Margin="10,10,0,0" Grid.Row="1" Grid.Column="0" Content="Stop after x Walkcycles" ToolTip="The bot will stop walking around after x Walk Cycles in order to avoid being banned." IsChecked="{Binding StopWalkCycles}" />
      <CheckBox Name="chk_alertwalkcycle" Margin="10,10,0,0" Grid.Row="1" Grid.Column="1" Content="Alert after x Walkcycles" ToolTip="The bot will alert you with a sound after x Walk Cycles without encountering a Pokemon to avoid being banned." IsChecked="{Binding AlertWalkCycles}" />
      <CheckBox Name="chk_alertsweetcent" Margin="10,10,0,0" Grid.Row="2" Grid.Column="1" Content="Alert when 0 SS" ToolTip="The bot will alert you with a sound after SS (Manual Sweet Scent) hits 0 to avoid being banned." IsChecked="{Binding AlertSweetScent}" />
      <StackPanel Margin="10,10,0,0" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
        <toolkit:IntegerUpDown xmlns:toolkit="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit" toolkit:IntegerUpDown.Name="walkcycles" FrameworkElement.HorizontalAlignment="Left" FrameworkElement.Width="60" FrameworkElement.Height="26" xmlns:primitives="clr-namespace:Xceed.Wpf.Toolkit.Primitives;assembly=Xceed.Wpf.Toolkit" primitives:InputBase.TextAlignment="Center" toolkit:NumericUpDown.FormatString="N0" toolkit:NumericUpDown.Increment="1" primitives:UpDownBase.Minimum="1" primitives:UpDownBase.Maximum="50" Control.Background="#FF252525" Control.Foreground="#FFFFFFFF" primitives:UpDownBase.Value="{Binding WalkCyclesTrigger}">
          <!--Unknown connection ID: 6-->
        </toolkit:IntegerUpDown>
        <TextBlock Name="lbl_text_walkcycles" Margin="10,0,0,0" VerticalAlignment="Center" Text="Walkcycles" Foreground="#FFFFFFFF" ToolTip="Settings to define when the bot should stop, when no pokemons are encountered anymore by walking to avoid being banned when getting teleported." />
      </StackPanel>
      <GridSplitter IsEnabled="False" Margin="10,10,10,0" Height="2" Grid.Row="4" Grid.ColumnSpan="2" />
      <TextBlock Name="lbl_walkspeed_in_ms" Margin="10,10,0,0" Grid.Row="5" Grid.Column="0" Text="Walkspeed [ms]" Foreground="#FFFFFFFF" ToolTip="Settings to adjust how long the Walk buttons are pressed. Fully randomized." />
      <CheckBox Margin="10,10,0,0" Grid.Row="5" Grid.Column="1" Content="Auto CH Switch [m]" ToolTip="Automatically changes the channel after a specific time. Fully randomized." IsChecked="{Binding AutoChannelSwitch}" />
      <StackPanel Margin="10,10,0,0" Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
        <IntegerUpDown p12:IntegerUpDown.Name="walkfromrnd" FrameworkElement.Width="60" FrameworkElement.Height="26" p13:InputBase.TextAlignment="Center" p12:NumericUpDown.FormatString="N0" p12:NumericUpDown.Increment="1" p13:UpDownBase.Minimum="1" p13:UpDownBase.Maximum="2000" Control.Background="#FF252525" Control.Foreground="#FFFFFFFF" p13:UpDownBase.Value="{Binding WalkSpeedFrom}" xmlns:p13="clr-namespace:Xceed.Wpf.Toolkit.Primitives;assembly=Xceed.Wpf.Toolkit" xmlns:p12="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit" xmlns="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit">
          <!--Unknown connection ID: 9-->
        </IntegerUpDown>
        <TextBlock Name="lbl_text_to" VerticalAlignment="Center" Margin="10,0,10,0" Text="to" Foreground="#FFFFFFFF" />
        <IntegerUpDown p12:IntegerUpDown.Name="walktornd" FrameworkElement.Width="60" FrameworkElement.Height="26" p13:InputBase.TextAlignment="Center" p12:NumericUpDown.FormatString="N0" p12:NumericUpDown.Increment="1" p13:UpDownBase.Minimum="1" p13:UpDownBase.Maximum="2000" Control.Background="#FF252525" Control.Foreground="#FFFFFFFF" p13:UpDownBase.Value="{Binding WalkSpeedTo}" xmlns:p13="clr-namespace:Xceed.Wpf.Toolkit.Primitives;assembly=Xceed.Wpf.Toolkit" xmlns:p12="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit" xmlns="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit">
          <!--Unknown connection ID: 11-->
        </IntegerUpDown>
      </StackPanel>
      <StackPanel Margin="10,10,0,0" Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
        <IntegerUpDown FrameworkElement.Width="60" FrameworkElement.Height="26" p12:InputBase.TextAlignment="Center" p13:NumericUpDown.FormatString="N0" p13:NumericUpDown.Increment="1" p12:UpDownBase.Minimum="1" p12:UpDownBase.Maximum="2000" Control.Background="#FF252525" Control.Foreground="#FFFFFFFF" p12:UpDownBase.Value="{Binding ChannelSwitchFrom}" xmlns:p13="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit" xmlns:p12="clr-namespace:Xceed.Wpf.Toolkit.Primitives;assembly=Xceed.Wpf.Toolkit" xmlns="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit" />
        <TextBlock VerticalAlignment="Center" Margin="10,0,10,0" Text="to" Foreground="#FFFFFFFF" />
        <IntegerUpDown FrameworkElement.Width="60" FrameworkElement.Height="26" p12:InputBase.TextAlignment="Center" p13:NumericUpDown.FormatString="N0" p13:NumericUpDown.Increment="1" p12:UpDownBase.Minimum="1" p12:UpDownBase.Maximum="2000" Control.Background="#FF252525" Control.Foreground="#FFFFFFFF" p12:UpDownBase.Value="{Binding ChannelSwitchTo}" xmlns:p13="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit" xmlns:p12="clr-namespace:Xceed.Wpf.Toolkit.Primitives;assembly=Xceed.Wpf.Toolkit" xmlns="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit" />
      </StackPanel>
      <GridSplitter IsEnabled="False" Margin="10,10,10,0" Height="2" Grid.Row="7" Grid.ColumnSpan="2" />
      <StackPanel Margin="10,10,0,0" Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
        <CheckBox Name="chk_turnofftimer" Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2" Content="Close [m]" ToolTip="Automatically closes the game and bot after a specific time." IsChecked="{Binding TurnOff}" />
        <IntegerUpDown p12:IntegerUpDown.Name="turnoff" FrameworkElement.Margin="17,0,0,0" FrameworkElement.HorizontalAlignment="Left" FrameworkElement.Width="60" FrameworkElement.Height="26" p13:InputBase.TextAlignment="Center" p12:NumericUpDown.FormatString="N0" p12:NumericUpDown.Increment="1" p13:UpDownBase.Minimum="1" p13:UpDownBase.Maximum="999" Control.Background="#FF252525" Control.Foreground="#FFFFFFFF" p13:UpDownBase.Value="{Binding TurnOffTrigger}" xmlns:p13="clr-namespace:Xceed.Wpf.Toolkit.Primitives;assembly=Xceed.Wpf.Toolkit" xmlns:p12="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit" xmlns="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit">
          <!--Unknown connection ID: 13-->
        </IntegerUpDown>
      </StackPanel>
      <CheckBox Margin="10,10,0,0" Grid.Row="8" Grid.Column="1" Grid.ColumnSpan="2" Content="Humanize Actions" ToolTip="Will do random human behaviours." IsChecked="{Binding Humanize}" />
      <GridSplitter IsEnabled="False" Margin="10,10,10,0" Height="2" Grid.Row="9" Grid.ColumnSpan="2" />
      <CheckBox Margin="10,10,0,0" Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="2" Content="Take a break every x [m] for x [m]" ToolTip="Automatically takes a break every x minutes for a certain time. Fully randomized." IsChecked="{Binding Break}" />
      <StackPanel Margin="10,10,0,0" Grid.Row="11" Grid.Column="0" Grid.ColumnSpan="1" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
        <IntegerUpDown FrameworkElement.HorizontalAlignment="Left" FrameworkElement.Width="60" FrameworkElement.Height="26" p12:InputBase.TextAlignment="Center" p13:NumericUpDown.FormatString="N0" p13:NumericUpDown.Increment="1" p12:UpDownBase.Minimum="1" p12:UpDownBase.Maximum="999" Control.Background="#FF252525" Control.Foreground="#FFFFFFFF" p12:UpDownBase.Value="{Binding BreakFrom}" xmlns:p13="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit" xmlns:p12="clr-namespace:Xceed.Wpf.Toolkit.Primitives;assembly=Xceed.Wpf.Toolkit" xmlns="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit" />
        <TextBlock Text="to" VerticalAlignment="Center" Margin="10,0,10,0" Foreground="#FFFFFFFF" />
        <IntegerUpDown FrameworkElement.HorizontalAlignment="Left" FrameworkElement.Width="60" FrameworkElement.Height="26" p12:InputBase.TextAlignment="Center" p13:NumericUpDown.FormatString="N0" p13:NumericUpDown.Increment="1" p12:UpDownBase.Minimum="1" p12:UpDownBase.Maximum="999" Control.Background="#FF252525" Control.Foreground="#FFFFFFFF" p12:UpDownBase.Value="{Binding BreakTo}" xmlns:p13="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit" xmlns:p12="clr-namespace:Xceed.Wpf.Toolkit.Primitives;assembly=Xceed.Wpf.Toolkit" xmlns="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit" />
      </StackPanel>
      <StackPanel Margin="10,10,0,0" Grid.Row="11" Grid.Column="1" Grid.ColumnSpan="1" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
        <IntegerUpDown FrameworkElement.HorizontalAlignment="Left" FrameworkElement.Width="60" FrameworkElement.Height="26" p12:InputBase.TextAlignment="Center" p13:NumericUpDown.FormatString="N0" p13:NumericUpDown.Increment="1" p12:UpDownBase.Minimum="1" p12:UpDownBase.Maximum="999" Control.Background="#FF252525" Control.Foreground="#FFFFFFFF" p12:UpDownBase.Value="{Binding BreakLengthFrom}" xmlns:p13="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit" xmlns:p12="clr-namespace:Xceed.Wpf.Toolkit.Primitives;assembly=Xceed.Wpf.Toolkit" xmlns="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit" />
        <TextBlock Text="to" VerticalAlignment="Center" Margin="10,0,10,0" Foreground="#FFFFFFFF" />
        <IntegerUpDown FrameworkElement.HorizontalAlignment="Left" FrameworkElement.Width="60" FrameworkElement.Height="26" p12:InputBase.TextAlignment="Center" p13:NumericUpDown.FormatString="N0" p13:NumericUpDown.Increment="1" p12:UpDownBase.Minimum="1" p12:UpDownBase.Maximum="999" Control.Background="#FF252525" Control.Foreground="#FFFFFFFF" p12:UpDownBase.Value="{Binding BreakLengthTo}" xmlns:p13="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit" xmlns:p12="clr-namespace:Xceed.Wpf.Toolkit.Primitives;assembly=Xceed.Wpf.Toolkit" xmlns="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit" />
      </StackPanel>
      <TextBlock Name="lbl_AutomaticCatpchaSolver" Grid.Row="12" Grid.Column="0" Grid.ColumnSpan="2" VerticalAlignment="Center" Margin="10,5,0,0" ToolTip="If you receive a Captcha the bot will automatically solve the Captcha. Only for Premium Users." Text="{Binding AutomaticCaptchaSolverText}" Foreground="{Binding AutomaticCaptchaSolverColor}" />
    </Grid>
    <iconpacks:PackIconMaterial FrameworkElement.Width="25" FrameworkElement.Height="25" FrameworkElement.Margin="10" FrameworkElement.HorizontalAlignment="Right" FrameworkElement.VerticalAlignment="Top" Control.Foreground="{DynamicResource MahApps.Brushes.AccentBase}" xmlns:iconpacks="clr-namespace:MahApps.Metro.IconPacks;assembly=MahApps.Metro.IconPacks.Material" iconpacks:PackIconMaterial.Kind="Shield" />
  </Grid>
</UserControl>