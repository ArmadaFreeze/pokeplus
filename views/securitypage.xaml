<UserControl x:Class="PokeMMO_.Views.SecurityPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:model="clr-namespace:PokeMMO_.Model"
             xmlns:local="clr-namespace:PokeMMO_.Views"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit">
  <Grid>
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="auto"/>
        <RowDefinition Height="auto"/>
        <RowDefinition Height="auto"/>
        <RowDefinition Height="auto"/>
        <RowDefinition Height="auto"/>
        <RowDefinition Height="auto"/>
        <RowDefinition Height="auto"/>
        <RowDefinition Height="auto"/>
        <RowDefinition Height="auto"/>
        <RowDefinition Height="auto"/>
        <RowDefinition Height="auto"/>
        <RowDefinition Height="auto"/>
        <RowDefinition Height="auto"/>
      </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>
      <CheckBox x:Name="chk_stoppm" Margin="10,17,0,0" Grid.Row="0" Grid.Column="0" Content="Stop when PM"
                ToolTip="The bot will stop after you receive a PM in a PM window in order to avoid being banned."
                IsChecked="{Binding StopPM}"/>
      <CheckBox x:Name="chk_alertpm" Margin="10,17,0,0" Grid.Row="0" Grid.Column="1" Content="Alert when PM"
                ToolTip="The bot will alert you after you receive a PM in a PM window in order to avoid being banned."
                IsChecked="{Binding AlertPM}"/>
      <CheckBox x:Name="chk_stopwalkcycle" Margin="10,10,0,0" Grid.Row="1" Grid.Column="0"
                Content="Stop after x Walkcycles"
                ToolTip="The bot will stop walking around after x Walk Cycles in order to avoid being banned."
                IsChecked="{Binding StopWalkCycles}"/>
      <CheckBox x:Name="chk_alertwalkcycle" Margin="10,10,0,0" Grid.Row="1" Grid.Column="1"
                Content="Alert after x Walkcycles"
                ToolTip="The bot will alert you with a sound after x Walk Cycles without encountering a Pokemon to avoid being banned."
                IsChecked="{Binding AlertWalkCycles}"/>
      <CheckBox x:Name="chk_alertsweetcent" Margin="10,10,0,0" Grid.Row="2" Grid.Column="1"
                Content="Alert when 0 SS"
                ToolTip="The bot will alert you with a sound after SS (Manual Sweet Scent) hits 0 to avoid being banned."
                IsChecked="{Binding AlertSweetScent}"/>
      <StackPanel Margin="10,10,0,0" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal"
                  HorizontalAlignment="Left" VerticalAlignment="Center">
        <IntegerUpDown x:Name="walkcycles" FrameworkElement.HorizontalAlignment="Left" FrameworkElement.Width="60"
                       FrameworkElement.Height="26" TextAlignment="Center" FormatString="N0" Increment="1" Minimum="1"
                       Maximum="50" Control.Background="#FF252525" Control.Foreground="White"
                       Value="{Binding WalkCyclesTrigger}"/>
        <TextBlock x:Name="lbl_text_walkcycles" Margin="10,0,0,0" VerticalAlignment="Center" Text="Walkcycles"
                   Foreground="White"
                   ToolTip="Settings to define when the bot should stop, when no pokemons are encountered anymore by walking to avoid being banned when getting teleported."/>
      </StackPanel>
      <GridSplitter IsEnabled="false" Margin="10,10,10,0" Height="2" Grid.Row="4" Grid.ColumnSpan="2"/>
      <TextBlock x:Name="lbl_walkspeed_in_ms" Margin="10,10,0,0" Grid.Row="5" Grid.Column="0" Text="Walkspeed [ms]"
                 Foreground="White"
                 ToolTip="Settings to adjust how long the Walk buttons are pressed. Fully randomized."/>
      <CheckBox Margin="10,10,0,0" Grid.Row="5" Grid.Column="1" Content="Auto CH Switch [m]"
                ToolTip="Automatically changes the channel after a specific time. Fully randomized."
                IsChecked="{Binding AutoChannelSwitch}"/>
      <StackPanel Margin="10,10,0,0" Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal"
                  HorizontalAlignment="Left" VerticalAlignment="Center">
        <IntegerUpDown x:Name="walkfromrnd" FrameworkElement.Width="60" FrameworkElement.Height="26"
                       TextAlignment="Center" FormatString="N0" Increment="1" Minimum="1" Maximum="2000"
                       Control.Background="#FF252525" Control.Foreground="White" Value="{Binding WalkSpeedFrom}"/>
        <TextBlock x:Name="lbl_text_to" VerticalAlignment="Center" Margin="10,0,10,0" Text="to" Foreground="White"/>
        <IntegerUpDown x:Name="walktornd" FrameworkElement.Width="60" FrameworkElement.Height="26" TextAlignment="Center"
                       FormatString="N0" Increment="1" Minimum="1" Maximum="2000" Control.Background="#FF252525"
                       Control.Foreground="White" Value="{Binding WalkSpeedTo}"/>
      </StackPanel>
      <StackPanel Margin="10,10,0,0" Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="2" Orientation="Horizontal"
                  HorizontalAlignment="Left" VerticalAlignment="Center">
        <IntegerUpDown FrameworkElement.Width="60" FrameworkElement.Height="26" TextAlignment="Center" FormatString="N0"
                       Increment="1" Minimum="1" Maximum="2000" Control.Background="#FF252525" Control.Foreground="White"
                       Value="{Binding ChannelSwitchFrom}"/>
        <TextBlock VerticalAlignment="Center" Margin="10,0,10,0" Text="to" Foreground="White"/>
        <IntegerUpDown FrameworkElement.Width="60" FrameworkElement.Height="26" TextAlignment="Center" FormatString="N0"
                       Increment="1" Minimum="1" Maximum="2000" Control.Background="#FF252525" Control.Foreground="White"
                       Value="{Binding ChannelSwitchTo}"/>
      </StackPanel>
      <GridSplitter IsEnabled="false" Margin="10,10,10,0" Height="2" Grid.Row="7" Grid.ColumnSpan="2"/>
      <StackPanel Margin="10,10,0,0" Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal"
                  HorizontalAlignment="Left" VerticalAlignment="Center">
        <CheckBox x:Name="chk_turnofftimer" Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2" Content="Close [m]"
                  ToolTip="Automatically closes the game and bot after a specific time."
                  IsChecked="{Binding TurnOff}"/>
        <IntegerUpDown x:Name="turnoff" FrameworkElement.Margin="17,0,0,0" FrameworkElement.HorizontalAlignment="Left"
                       FrameworkElement.Width="60" FrameworkElement.Height="26" TextAlignment="Center" FormatString="N0"
                       Increment="1" Minimum="1" Maximum="999" Control.Background="#FF252525" Control.Foreground="White"
                       Value="{Binding TurnOffTrigger}"/>
      </StackPanel>
      <CheckBox Margin="10,10,0,0" Grid.Row="8" Grid.Column="1" Grid.ColumnSpan="2" Content="Humanize Actions"
                ToolTip="Will do random human behaviours." IsChecked="{Binding Humanize}"/>
      <GridSplitter IsEnabled="false" Margin="10,10,10,0" Height="2" Grid.Row="9" Grid.ColumnSpan="2"/>
      <CheckBox Margin="10,10,0,0" Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="2"
                Content="Take a break every x [m] for x [m]"
                ToolTip="Automatically takes a break every x minutes for a certain time. Fully randomized."
                IsChecked="{Binding Break}"/>
      <StackPanel Margin="10,10,0,0" Grid.Row="11" Grid.Column="0" Grid.ColumnSpan="1" Orientation="Horizontal"
                  HorizontalAlignment="Left" VerticalAlignment="Center">
        <IntegerUpDown FrameworkElement.HorizontalAlignment="Left" FrameworkElement.Width="60"
                       FrameworkElement.Height="26" TextAlignment="Center" FormatString="N0" Increment="1" Minimum="1"
                       Maximum="999" Control.Background="#FF252525" Control.Foreground="White" Value="{Binding BreakFrom}"/>
        <TextBlock Text="to" VerticalAlignment="Center" Margin="10,0,10,0" Foreground="White"/>
        <IntegerUpDown FrameworkElement.HorizontalAlignment="Left" FrameworkElement.Width="60"
                       FrameworkElement.Height="26" TextAlignment="Center" FormatString="N0" Increment="1" Minimum="1"
                       Maximum="999" Control.Background="#FF252525" Control.Foreground="White" Value="{Binding BreakTo}"/>
      </StackPanel>
      <StackPanel Margin="10,10,0,0" Grid.Row="11" Grid.Column="1" Grid.ColumnSpan="1" Orientation="Horizontal"
                  HorizontalAlignment="Left" VerticalAlignment="Center">
        <IntegerUpDown FrameworkElement.HorizontalAlignment="Left" FrameworkElement.Width="60"
                       FrameworkElement.Height="26" TextAlignment="Center" FormatString="N0" Increment="1" Minimum="1"
                       Maximum="999" Control.Background="#FF252525" Control.Foreground="White"
                       Value="{Binding BreakLengthFrom}"/>
        <TextBlock Text="to" VerticalAlignment="Center" Margin="10,0,10,0" Foreground="White"/>
        <IntegerUpDown FrameworkElement.HorizontalAlignment="Left" FrameworkElement.Width="60"
                       FrameworkElement.Height="26" TextAlignment="Center" FormatString="N0" Increment="1" Minimum="1"
                       Maximum="999" Control.Background="#FF252525" Control.Foreground="White"
                       Value="{Binding BreakLengthTo}"/>
      </StackPanel>
      <TextBlock x:Name="lbl_AutomaticCatpchaSolver" Grid.Row="12" Grid.Column="0" Grid.ColumnSpan="2"
                 VerticalAlignment="Center" Margin="10,5,0,0"
                 ToolTip="If you receive a Captcha the bot will automatically solve the Captcha. Only for Premium Users."
                 Text="{Binding AutomaticCaptchaSolverText}" Foreground="{Binding AutomaticCaptchaSolverColor}"/>
    </Grid>
    <PackIconMaterial FrameworkElement.Width="25" FrameworkElement.Height="25" FrameworkElement.Margin="10"
                      FrameworkElement.HorizontalAlignment="Right" FrameworkElement.VerticalAlignment="Top"
                      Control.Foreground="{DynamicResource MahApps.Brushes.AccentBase}" Kind="Shield"/>
  </Grid>
</UserControl>