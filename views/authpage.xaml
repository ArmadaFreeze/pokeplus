<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="PokeMMO_.Views.AuthPage" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:PokeMMO_.Views" xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:model="clr-namespace:PokeMMO_.Model" xmlns:sys="clr-namespace:System;assembly=mscorlib" xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks">
  <Grid>
    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="1*" />
      </Grid.ColumnDefinitions>
      <Grid.RowDefinitions>
        <RowDefinition Height="auto" />
        <RowDefinition Height="auto" />
        <RowDefinition Height="auto" />
        <RowDefinition Height="auto" />
        <RowDefinition Height="auto" />
        <RowDefinition Height="auto" />
        <RowDefinition Height="auto" />
        <RowDefinition Height="auto" />
        <RowDefinition Height="auto" />
        <RowDefinition Height="auto" />
        <RowDefinition Height="auto" />
        <RowDefinition Height="auto" />
        <RowDefinition Height="auto" />
        <RowDefinition Height="auto" />
      </Grid.RowDefinitions>
      <TextBlock Name="lbl_auth_status" Margin="10,17,0,0" Grid.Row="0" Foreground="#FFFFFFFF" Text="{Binding Status}" />
      <TextBlock Name="lbl_auth_username" Margin="10,0,0,0" Grid.Row="2" Foreground="#FFFFFFFF" Text="{Binding Username}" />
      <GridSplitter IsEnabled="False" Margin="10,10,10,0" Grid.Row="5" Height="2" />
      <TextBlock Name="lbl_auth_hwid" Margin="10,10,0,0" Grid.Row="6" Foreground="#FFFFFFFF" Text="{Binding HWID}" />
      <GridSplitter IsEnabled="False" Margin="10,10,10,0" Grid.Row="8" Height="2" />
      <TextBlock Name="lbl_auth_ip" Margin="10,10,0,0" Grid.Row="9" Foreground="#FFFFFFFF" Text="{Binding IP}" />
      <TextBlock Name="lbl_auth_expiry" Margin="10,0,0,0" Grid.Row="10" Foreground="#FFFFFFFF" Text="{Binding Expiry}" />
      <TextBlock Name="lbl_auth_last_login" Margin="10,0,0,0" Grid.Row="11" Foreground="#FFFFFFFF" Text="{Binding LastLogin}" />
      <TextBlock Name="lbl_auth_register_date" Margin="10,0,0,0" Grid.Row="12" Foreground="#FFFFFFFF" Text="{Binding RegisterDate}" />
    </Grid>
    <iconpacks:PackIconMaterial FrameworkElement.Width="25" FrameworkElement.Height="25" FrameworkElement.Margin="10" FrameworkElement.HorizontalAlignment="Right" FrameworkElement.VerticalAlignment="Top" Control.Foreground="{DynamicResource MahApps.Brushes.AccentBase}" xmlns:iconpacks="clr-namespace:MahApps.Metro.IconPacks;assembly=MahApps.Metro.IconPacks.Material" iconpacks:PackIconMaterial.Kind="Account" />
  </Grid>
</UserControl>