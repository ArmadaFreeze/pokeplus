      <Button Name="btn_register_backtologin" Content="Back to Login" Height="23" HorizontalAlignment="Center" Width="180" />
    </StackPanel>
    <StackPanel Name="stackpanel_txt_extend" VerticalAlignment="Center" Visibility="Hidden">
      <WatermarkTextBox p10:WatermarkTextBox.Name="txt_extend_username" Control.Foreground="#FFFFFFFF" p10:WatermarkTextBox.Watermark="Username" FrameworkElement.Margin="0px,0px,0px,8px" FrameworkElement.Height="23" FrameworkElement.HorizontalAlignment="Center" FrameworkElement.Width="150" xmlns:p10="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit" xmlns="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit">
